
{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "diagnostics": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/"]
        },
        "types": ["svelte"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "app/src/renderer/**/*"
    ]
}
